<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<title>Inicio de Sesión</title>
    <link rel="icon" href="https://valentramos.com/wp-content/uploads/2017/08/icono.png" sizes="32x32">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link href="/css/style.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="container">
        <div class="row home"> 

            <div class="col-md-12 text-center">
                <img src="/img/logo.png">
                <h2><span class="fa fa-sign-in"></span> Inicio de Sesión</h2>
            </div>

            <div class="col-sm-12 col-sm-offset-6">

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/login" method="post">
                    <div class="form-group">
                        <label>Nombre de Usuario</label>
                        <input type="text" class="form-control" name="username">
                    </div>
                    <div class="form-group">
                        <label>Contraseña</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <div class="form-group">
                        <label>Recordarme</label>
                        <input type="checkbox" class="form-control" name="remember" value="yes">
                    </div>

                    <button type="submit" class="btn btn-warning btn-lg">Ingresar</button>
                </form>

                <hr>

                <p>Necesitas una Cuenta? <a href="/signup">Regístrate</a></p>
                <p>Ir al <a href="/">Inicio</a></p>
            </div>
        </div>
    </div>
</body>
</html>
